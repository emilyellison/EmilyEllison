<div class='span6'></div>
	<h1><%= @project.title %></h1>

	<p><%= @project.when %></p>
	<p><%= @project.website %></p>
	<p><%= @project.github %></p>
	<p><%= @project.description %></p>
	<p><%= @project.tools %></p>
	<ul>
		<% @project.functionality.split(' * ').each do |function| %>
			<li><%= function %></li>
		<% end %>
	</ul>
</div>
<div class='span6'>
	<%= image_tag @project.image %>
</div>