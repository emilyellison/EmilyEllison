<% if @project_image.errors.any? %>
	<p>Yikes! Something went wrong...</p>
	<ul>
		<% @project_image.errors.full_messages.each do |msg| %>
			<li><%= msg %>.</li>
		<% end %>
	</ul>
<% end %>

<%= form_for @project_image do |f| %>
	<%= f.label :project_id %>
	<%= f.collection_select :project_id, Project.all, :id, :title %>
	<%= f.label :image %>
	<%= f.text_field :image %><br/><br/>
	<%= f.submit 'Submit', class: 'button' %>
<% end %>