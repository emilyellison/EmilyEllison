<div class='span12'>
	<h1>Blog</h1>
	<% @blog_posts.each do |blog_post| %>
		<h2>
			<%= link_to blog_post.title, blog_post_url(blog_post.id) %>
			<% if @current_user && @current_user.admin == true %>
				<span class='edit_delete'>
					<%= link_to '&#9998;'.html_safe, edit_blog_post_url(blog_post.id) %>
					<%= link_to '&#9851;'.html_safe, blog_post_url(blog_post.id), method: :delete, confirm: 'Are you sure you want to delete this blog post?' %>
				</span>
			<% end %>
		</h2>
		<div><%= Markdown.new(truncate(blog_post.content, length: 300)).to_html.html_safe %></div>
		<p><%= link_to 'READ MORE &rarr;'.html_safe, blog_post_url(blog_post.id) %></p>
		<hr/>
	<% end %>
</div>