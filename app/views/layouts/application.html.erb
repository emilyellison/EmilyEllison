<!DOCTYPE html>
<html>
	<head>
	  <title>EmClicks</title>
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
		<link href='http://fonts.googleapis.com/css?family=Pontano+Sans' rel='stylesheet' type='text/css'>
	</head>
	<body>
		<div class='frame'>
			<header>
				<div class='logo'>
					<%= link_to 'Emily Ellison', root_url %>
				</div>
				<div class='menu'>
					<ul>
						<li class='<%= @home_page %>'><%= link_to 'Home', root_url %></li>
						<li class='<%= @portfolio_page %>'><%= link_to 'Portfolio', '#' %></li>
						<li class='<%= @about_page %>'><%= link_to 'About', about_url %></li>
						<li class='<%= @blog_page %>'><%= link_to 'Blog', '#' %></li>
						<li class='<%= @hire_page %>'><%= link_to 'Hire', '#' %></li>
					</ul>
				</div>
			</header>
			<div class='content'>
				<div class='content_wrap'>
					<%= yield %>
				</div>
			</div>
		</div>
	</body>
</html>
